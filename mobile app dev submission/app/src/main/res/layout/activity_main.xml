<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"

    >

    <Switch
        android:id="@+id/CountdownSwitch"
        android:layout_height="40dp"
        android:checked="false"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <TextView

        android:id="@+id/timer"
        android:layout_height="55dp"
        android:textSize="27dp"
        />

    <Button
        android:id="@+id/toscene2"
        android:layout_width="247dp"
        android:layout_height="62dp"
        android:text="Identify the car make">


    </Button>

    <Button
        android:id="@+id/toscene3"
        android:layout_width="wrap_content"
        android:layout_height="62dp"
        android:text="Hints">


    </Button>

    <Button
        android:id="@+id/toscene4"
        android:layout_width="171dp"
        android:layout_height="62dp"
        android:text="Indentify car image"
        >

    </Button>

    <Button
        android:id="@+id/toscene5"
        android:layout_width="wrap_content"
        android:layout_height="62dp"
        android:text="Advanced level">

    </Button>

</TableLayout>